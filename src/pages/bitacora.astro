---
import '../styles/global.css';
import { Badge } from "@/components/ui/badge"
import { blogs } from "@/data/site";
import PageLayout from '../layouts/page.astro';
import { Image } from 'astro:assets';

const meta = {
  title: "Guido Genzone  | Cuadernos",
  description: "Bitácoras personales donde documento mi proceso de aprendizaje en finanzas, electrónica, música y matemáticas, utilizando IA como herramienta de exploración y descubrimiento.",
  siteName: "Guido Genzone",
  author: "Guido Genzone",
  publishedTime: "2024-07-03",
  modifiedTime: "2024-07-04",
};
---
 
<PageLayout meta={meta}>
    <section class="py-20 md:py-32">
        <div class="container mx-auto px-4 md:px-6">
            <div class="text-center space-y-4 mb-16">
                <Badge variant="secondary">
                    Bitácoras
                </Badge>
                <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
                    Explora mis cuadernos de aprendizaje
                </h2>
                <p class="text-xl text-muted-foreground max-w-[800px] mx-auto">
                    Bitácoras personales donde documento mi proceso de aprendizaje en finanzas, electrónica, música y matemáticas, utilizando IA como herramienta de exploración y descubrimiento.
                </p>
            </div>
            <div class="flex flex-1 flex-col gap-4 p-4">
                <div class="grid auto-rows-min gap-4 md:grid-cols-2">
                    {blogs.map(blog => (
                        <a href={blog.home} class="block bg-muted/50 aspect-video rounded-xl overflow-hidden group relative">
                            <Image src={blog.image} alt="Perspectiva" class="object-cover w-full h-full opacity-80 group-hover:opacity-100 transition" />
                            <span class="absolute bottom-4 left-4 text-lg font-semibold text-white drop-shadow">{blog.title}</span>
                        </a>
                    ))}
                </div>
	        </div>
        </div>
    </section>
</PageLayout>